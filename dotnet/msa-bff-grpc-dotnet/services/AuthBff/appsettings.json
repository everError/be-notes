{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",

      // 서버 측 Kestrel 연결/요청 로그
      "Microsoft.AspNetCore.Server.Kestrel": "Debug",

      // 클라이언트 측 gRPC 연결 및 요청 흐름
      "Grpc.Net.Client": "Debug",
      "Grpc.Net.Client.Internal.GrpcCall": "Trace",
      "Grpc.Net.Client.GrpcChannel": "Debug",

      // 추가로 HttpHandler나 전송 계층 추적을 원한다면:
      "System.Net.Http.HttpClient": "Information",
      "System.Net.Http.HttpClientHandler": "Information"
    }
  },
  "AllowedHosts": "*"
}
